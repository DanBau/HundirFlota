<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.MainActivity"
    android:background="@color/colorPrimaryText">

    <Button
        android:id="@+id/main_btnJugar"
        android:layout_width="201dp"
        android:layout_height="103dp"
        android:background="@color/colorPrimaryDark"
        android:drawableLeft="@android:drawable/ic_media_play"
        android:padding="10dp"
        android:text="@string/jugar"
        android:textColor="@color/icons"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/main_btnRanking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.848"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.813" />

    <Button
        android:id="@+id/main_btnAyuda"
        android:layout_width="204dp"
        android:layout_height="108dp"
        android:background="@color/colorPrimaryDark"
        android:drawableLeft="@android:drawable/ic_menu_help"
        android:padding="10dp"
        android:text="@string/ayuda"
        android:textColor="@color/icons"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/main_btnAcercaDe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.847"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.899" />

    <Button
        android:id="@+id/main_btnRanking"
        android:layout_width="208dp"
        android:layout_height="104dp"
        android:background="@color/colorPrimaryDark"
        android:drawableLeft="@android:drawable/btn_star"
        android:padding="10dp"
        android:text="@string/ranking"
        android:textColor="@color/icons"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/main_btnAyuda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.849"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.873" />

    <Button
        android:id="@+id/main_btnAcercaDe"
        android:layout_width="207dp"
        android:layout_height="105dp"
        android:background="@color/colorPrimaryDark"
        android:drawableLeft="@android:drawable/ic_menu_info_details"
        android:padding="10dp"
        android:text="@string/acerca_de"
        android:textColor="@color/icons"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.849"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.764" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="546dp"
        android:layout_height="546dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imgapp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="@string/hundir_la_flota"
        android:textAlignment="center"
        android:textColor="@color/icons"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>