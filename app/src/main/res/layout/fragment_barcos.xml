<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryText"
    android:orientation="vertical"
    tools:context=".Fragments.BarcosFrag">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTitleBarcos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/intentos"
            android:textAlignment="center"
            android:textColor="@color/icons"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/txtNumIntentos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_1"
            android:textAlignment="center"
            android:padding="0dp"
            android:textColor="@color/colorPrimary"
            android:textSize="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBarco4"
            android:layout_width="276dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/b4" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="128dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/aspas"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBarco3"
            android:layout_width="194dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/b3" />

        <ImageView
            android:id="@+id/img31"
            android:layout_width="112dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/aspas"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img32"
            android:layout_width="112dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/aspas"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBarco2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/b2" />

        <ImageView
            android:id="@+id/img21"
            android:layout_width="112dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/aspas"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img22"
            android:layout_width="112dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/aspas"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img23"
            android:layout_width="112dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/aspas"
            android:visibility="invisible" />
    </LinearLayout>


</LinearLayout>