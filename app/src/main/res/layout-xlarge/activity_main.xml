<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.MainActivity"
    android:background="@color/colorPrimaryText">

    <Button
        android:id="@+id/main_btnJugar"
        android:layout_width="185dp"
        android:layout_height="106dp"
        android:background="@color/colorPrimaryDark"
        android:drawableLeft="@android:drawable/ic_media_play"
        android:padding="10dp"
        android:text="@string/jugar"
        android:textColor="@color/icons"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/main_btnRanking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.94" />

    <Button
        android:id="@+id/main_btnAcercaDe"
        android:layout_width="188dp"
        android:layout_height="90dp"
        android:layout_marginBottom="124dp"
        android:background="@color/colorPrimaryDark"
        android:drawableLeft="@android:drawable/ic_menu_info_details"
        android:padding="10dp"
        android:text="@string/acerca_de"
        android:textColor="@color/icons"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/main_btnAyuda"
        android:layout_width="191dp"
        android:layout_height="80dp"
        android:layout_marginBottom="56dp"
        android:background="@color/colorPrimaryDark"
        android:drawableLeft="@android:drawable/ic_menu_help"
        android:padding="10dp"
        android:text="@string/ayuda"
        android:textColor="@color/icons"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/main_btnAcercaDe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"

        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/main_btnRanking"
        android:layout_width="189dp"
        android:layout_height="90dp"
        android:layout_marginBottom="48dp"
        android:background="@color/colorPrimaryDark"
        android:drawableLeft="@android:drawable/btn_star"
        android:padding="10dp"
        android:text="@string/ranking"
        android:textColor="@color/icons"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/main_btnAyuda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="541dp"
        android:layout_height="477dp"
        app:layout_constraintBottom_toTopOf="@+id/main_btnJugar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.601"
        app:srcCompat="@drawable/imgapp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="@string/hundir_la_flota"
        android:textAlignment="center"
        android:textColor="@color/icons"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>